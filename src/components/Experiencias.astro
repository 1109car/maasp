---
interface Props {
    title:string,
    bodyUno:string,
    bodyDos:string
}
const { title, bodyUno, bodyDos } = Astro.props;
---
<div>
    <h2>{ title }</h2>
    <ul>
        <li>{ bodyUno }</li>
        <br>
        <li>{ bodyDos }</li>
    </ul>
</div>
<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    div{

        width: 50%;
        height: 60%;
        background-color: #474747;
        padding: 4%;
        padding-right: 10%;
        padding-left: 5%;
       
    }
    h2{
        margin-bottom: 2%;
        color: #fff;
        opacity: 0.9;
    }
    li{
        color: #fff;
        opacity: 0.9;
    }
    @media (max-width: 768px) {
		div{
			display: flex;
            justify-content: center;
            align-items: center;
			flex-wrap: wrap;
           
            margin-left: auto;
			width: 100%;
			height: 100%;
		}
	}
</style>